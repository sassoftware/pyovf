loadSuperClass('testpackage=testbits.rb.rpath.com@rpl:1')
class PyOvf(TestPackageRecipe):
    name = 'pyovf'
    version = '0.1'

    buildRequires = [
        'make:runtime',
        'util-linux:runtime',
        'xobj:python',
        ]

    codeDirs = {'pyovf': 'pyovf'}

    def setup(r):
        r.addMercurialSnapshot()
        r.Make()

        # Install the python module
        r.MakeInstall()

        if Flags.test:
            r.test()
